<!DOCTYPE html>
<html>
<head>
  <title>Zuse Hub - <%= @project.title %></title>
  <link href='http://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,800,700,600,300' rel='stylesheet' type='text/css' />
  <link rel='stylesheet' type='text/css' href="http://code.ionicframework.com/ionicons/1.4.1/css/ionicons.min.css"/>
  <%= stylesheet_link_tag    "application", media: "all" %>
  <%= javascript_include_tag "application" %>
  <%= javascript_tag do %>
    $(function () {
      window.project_json = <%= raw @commit.project_json %>;

      window.compiled_components = <%= raw @commit.compiled_components %>;

      window.game = new ZuseAppEngine( { canvas: $("#viewport"), project_json: window.project_json, compiled_components: window.compiled_components } );
    });
  <% end %>
  <%= csrf_meta_tags %>
</head>
<body>
  
  <%= render "layouts/social_media" %>
  <%= render "layouts/header" %>

  <%= yield %>

  <%= render "layouts/footer" %>
</body>
</html>
