<!DOCTYPE html>
<html>
<head>
  <title>Zuse Hub - <%= @title %></title>
  <link href='http://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,800,700,600,300' rel='stylesheet' type='text/css' />
  <%= stylesheet_link_tag    "application", media: "all" %>
  <%= javascript_include_tag "application" %>
  <%= javascript_tag do %>
    $(function () {
      window.project_json = <%= raw @shared_project.project_json %>;

      window.compiled_components = <%= raw @shared_project.compiled_components %>;

      var canvas = $("#viewport");

      window.game = new ZuseAppEngine( { canvas: canvas, project_json: window.project_json, compiled_components: window.compiled_components } );
    });
  <% end %>
  <%= csrf_meta_tags %>
</head>
<body>
  <%= render "layouts/header" %>

<%= yield %>

</body>
</html>
